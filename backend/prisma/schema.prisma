generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id            String   @id @default(uuid())
  group         String
  title         String   @unique
  firstAnswer   String
  secondAnswer  String
  thirdAnswer   String
  fourthAnswer  String
  correctAnswer Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("questions")
}
